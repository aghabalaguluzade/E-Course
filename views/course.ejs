	<%- include("partials/_head.ejs") %>


	<%- include("partials/_header.ejs") %>
	

	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.name %><span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="<%= course.name %>" class="img-fluid" />
						</div>
						<div class="post-content">
							<div class="post-date">
								<span class="day"><%= course.createdAt.toLocaleDateString("az-AZ", { day : "numeric" }) %></span>
								<span class="month"><%= course.createdAt.toLocaleDateString("az-AZ", { month : "short" }).toUpperCase() %></span>
							</div>
							<div class="post-date mr-2">

								<% if(user && (!user.courses.includes(course._id))) { %>

								<form action="/courses/enroll" method="POST">
									<input type="hidden" name="course_id" value="<%= course._id %>" />
									<button type="submit" class="btn btn-md btn-warning text-white"><span>Enroll</span></button>
								</form>

								<% } %>

							</div>
							<div class="meta-info-blog">
								<span style="color: purple;"><i class="fa fa-calendar mr-2"></i><%= course.createdAt.toLocaleDateString("az-AZ", { day: 'numeric' }) + "-"+ course.createdAt.toLocaleDateString("az-AZ", { month: 'short' })+ "-" + course.createdAt.toLocaleDateString("az-AZ", { year: 'numeric' }) %></span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<blockquote class="default">
									<%= course.description %>
								</blockquote>
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= course.user.name %></a></h3>
						</div>
					</div>
                </div><!-- end col -->
			 <div class="col-lg-3 col-12 right-single">
				<div class="widget-search">
					<div class="site-search-area">
						<form action="/courses" method="GET" id="site-searchform">
							<div>
								<input class="input-text form-control" name="search" id="search-k" placeholder="Search..." type="search" />
								<button id="searchsubmit" value="Search" type="submit"></button>
							</div>
						</form>
					</div>
				</div>
				<div class="widget-categories">
					<h3 class="widget-title">Categories</h3>
					<ul>
						<% for(category of categories) { %>
						<li><a href="/courses?categories=<%= category.slug %>"><%= category.name %></a></li>
						<% } %>						
					</ul>
				</div>
			 </div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

    <%- include("partials/_footer.ejs") %>