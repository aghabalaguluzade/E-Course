	<%- include("partials/_head.ejs") %>

    <%- include("partials/_header.ejs") %>
	

	<div class="all-title-box">
		<div class="container text-center">
			<h1>Courses<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
			<div class="row"> 

			<% for(course of courses) { %>

                <div class="col-lg-6 col-md-6 col-12">
                    <div class="course-item mb-5">
						<div class="image-blog">
							<a href="/courses/<%= course.slug %>">
								<img src="/images/blog_2.jpg" alt="<%= course.name %>" class="img-fluid" />
							</a>
						</div>
						<div class="course-br">
							<div class="course-title">
								<h2><a href="/courses/<%= course.slug %>" title="<%= course.name %>"><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<p><%= course.description.substr(0,80) + '...' %></p>
							</div>
						</div>
						<div class="course-meta-bot">
							<ul>
								<li><i class="fa fa-user" aria-hidden="true"></i><%= course.user.name %></li>
							</ul>
						</div>
					</div>
                </div>
				        
			<% } %>	

            </div><!-- end row -->
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form action="/courses" method="GET" id="site-searchform">
								<div>
									<input class="input-text form-control" name="search" id="search-k" placeholder="Search..." type="search" />
									<button id="searchsubmit" value="Search" type="submit"></button>
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% for(category of categories) { %>
							
								<li><a href="/courses?categories=<%= category.slug %>"><%= category.name %></a></li>
							
							<% } %>
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->


    <%- include("partials/_footer.ejs") %>

